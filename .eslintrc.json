{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "ignorePatterns": [
        "dist/"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "unused-imports"
    ],
    "rules": {
        "no-restricted-imports": [
            "error",
            {
                "patterns": [
                    ".*"
                ]
            }
        ],
        "@typescript-eslint/restrict-template-expressions": "off"
    }
}